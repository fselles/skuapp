<header id="content-header">
  <h1><%= pluralize(@users.size, 'User') %></h1>
</header>

<ul id="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<% if current_user && current_user.admin? %>
	<%= link_to "Nieuwe gebruiker", new_user_path, :class => 'button' %>
<% end %>