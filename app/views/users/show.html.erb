<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
  </header>
</article>
<footer>
  <nav>
    <% if current_user?(@user) || current_user.admin? %>
      <%= link_to 'Account aanpassen', edit_user_path(@user), class: 'button' %>
      <%= link_to 'Account verwijderen', @user,
              method: :delete,
              data: { confirm: 'Weet je zeker dat je dit account wilt verwijderen?' },
              class: 'button' %>
    <% end %>
  </nav>
</footer>